@using BlogMusic.Models
@model Gundem
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h3 class="card-header">Haber Güncelleme Formu</h3>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label for="Baslik">Haber Başlığı</label>
                    <input id="Baslik" type="text" name="Baslik" class="form-control parsley-error" value="@Model.Baslik" maxlength="150" required>
                </div>

                <div class="form-group">
                    <label for="GundemResim">Fotoğraf URL</label>
                    <input id="GundemResim" type="url" name="GundemResim" class="form-control parsley-error" value="@Model.GundemResim" maxlength="250" required>
                </div>
                <div class="form-group">
                    <label for="Icerik">Haber İçeriği</label>
                    <textarea class="form-control" id="Icerik" rows="5" name="Icerik" required>@Model.Icerik</textarea>
                </div>
                <div class="row">
                    <div class="col-sm-6 pb-2 pb-sm-4 pb-lg-0 pr-0">

                    </div>
                    <div class="col-sm-6 pl-0">
                        <p class="text-right">
                            <button type="submit" class="btn btn-space btn-primary">Güncelle</button>
                            <button type="reset" class="btn btn-space btn-secondary" onclick="location.href='/Admin/TumHaberler/'">İptal</button>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
